{
  "appId": "com.ai-windbg.app",
  "productName": "AI WinDBG",
  "directories": {
    "output": "dist-electron-app",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/*.cjs",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AI WinDBG"
  },
  "portable": {
    "artifactName": "AI-WinDBG-Portable-${version}.${ext}"
  },
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "ai-windbg"
  }
}
